<% content_for :title, "所有分类" %>

<%= render :partial => 'shared/leftnav',:locals => { :highlight => "categories"} %>

<div id="main">
    <%if !@current_navleft_header_name.nil? && !@current_navleft_name.nil?%>
    <%= render :partial => 'shared/s_path'%>
    <%end%>

    <div class="tab">
        <table width="786" cellspacing="1" cellpadding="0" border="0">
            <tbody>
                <tr>
                    <td id="tab_tit" colspan="10">所有分类</td>
                </tr>
                <tr>
                    <td class="f_tab">物料分类名</td>
                    <td class="f_tab">分类缩写</td>
                    <td class="f_tab">操作</td>
                </tr>
                <%@categories.each do |category|%>
                    <tr>
                        <td><%=category.name%></td>
                        <td><%=category.cid%></td>
                        <td>
                        <%= link_to image_tag("/images/icons/database_edit.png", {:alt => "修改", :title => "修改", :border => 0}), edit_category_url(category)%>
                        <%= link_to image_tag("/images/icons/database_delete.png", {:alt => "删除", :title => "删除", :border => 0}), category_url(category), :method => :delete, :confirm => "确认要删除这个分类吗?"%>
                        </td>
                    </tr>
                <%end%>
                <tr>
                    <td id="tab_tit02" colspan="10"><font >共有<%=@categories.total_entries%>条记录</font></td>
                </tr>
            </tbody>
        </table>
        <%=will_paginate @categories%>
    </div>
</div>