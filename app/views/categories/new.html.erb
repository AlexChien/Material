<% content_for :title, "添加分类" %>

<%= render :partial => 'shared/leftnav',:locals => { :highlight => "categories_new"} %>

<div id="main">
    <%if !@current_navleft_header_name.nil? && !@current_navleft_name.nil?%>
    <%= render :partial => 'shared/s_path'%>
    <%end%>

    <div class="tab">
        <% form_for :category, :url => categories_path, :html=>{:multipart => true} do |f| -%>
        <%=f.error_messages%>
        <table cellspacing="0" cellpadding="0" border="0" width="786" class="tab01">
            <tbody>
                <tr>
                    <td id="tab_tit" colspan="4">添加分类</td>
                </tr>
                <tr>
                    <td><%= f.label :name, "<em>*</em>物料分类名" %></td>
                    <td class="td_left">
                        <%= f.text_field :name %>
                    </td>
                </tr>
                <tr>
                    <td><%= f.label :cid, "<em>*</em>分类缩写" %></td>
                    <td class="td_left">
                        <%= f.text_field :cid %>
                    </td>
                </tr>
                <tr><td id="tab_bottom" colspan="4"></td>
                </tr>
            </tbody>
        </table>
        <br/>
        <div class="tab_btn">
            <%= f.submit "保存",:class=>"button_btn" %>
        </div>
        <%end%>
    </div>
</div>