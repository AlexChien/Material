<% form_for @order,:url=>{:action=>"accept_fail"},:html=>{:method=>:put,:onSubmit=>"return check_message();"} do |f| -%>
<table cellspacing="0" cellpadding="0" border="0" width="786" class="tab01">
    <tbody>
        <tr>
            <td id="tab_tit" colspan="4">预定拒绝理由</td>
        </tr>
        <tr>
            <td><%= label_tag :memo, "<em>*</em>请填写预定拒绝理由" %></td>
            <td class="td_left">
                <%= text_area_tag :memo %>
            </td>
        </tr>
        <tr><td id="tab_bottom" colspan="4"></td>
        </tr>
    </tbody>
</table>
<br/>
<div class="tab_btn">
    <%= f.submit "提交",:class=>"button_btn",:confirm=>"提交后将等待大区管理员修改订单！您确认此次提交吗？" %>
    <input type="button" onclick="$('#accept_fail_message').html('');" class="button_btn" value="取消"></input>
</div>
<%end%>

<%javascript_tag do%>
    function check_message(){
        var memo = $("#memo").val();
        if(memo.length<=0){
            alert("请输入预定拒绝理由");
            return false;
        }
    }
<%end%>