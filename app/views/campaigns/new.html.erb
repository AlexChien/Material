<% content_for :title, "发起活动" %>

<%= render :partial => 'shared/leftnav',:locals => { :highlight => "campaigns_new"} %>

<div id="main">
	<%if !@current_navleft_header_name.nil? && !@current_navleft_name.nil?%>
	<%= render :partial => 'shared/s_path'%>
	<%end%>

	<div class="tab">
		<% form_for :campaign, :url => campaigns_path do |f| -%>
		<%=f.error_messages%>
		<table cellspacing="1" cellpadding="0" border="0" width="786" class="tab01">
			<tbody>
				<tr>
					<td id="tab_tit" colspan="4">发起活动</td>
				</tr>
				<tr>
					<td><%= f.label :name, "<em>*</em>活动名称" %></td>
					<td class="td_left">
						<%= f.text_field :name %>
					</td>
				</tr>
				<tr>
					<td><%= f.label :description, "活动简介" %></td>
					<td class="td_left">
						<%= f.text_area :description %>
					</td>
				</tr>
				<tr><td id="tab_tit" colspan="4"></td>
				</tr>
			</tbody>
		</table>
		<br/>
		<div class="tab_btn">
			<%= f.submit "保存",:class=>"button_btn" %>
		</div>
		<%end%>
	</div>
</div>