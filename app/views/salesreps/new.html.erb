<% content_for :title, "添加销售" %>

<%= render :partial => 'shared/leftnav',:locals => { :highlight => "salesreps_new"} %>

<div id="main">
    <%if !@current_navleft_header_name.nil? && !@current_navleft_name.nil?%>
    <%= render :partial => 'shared/s_path'%>
    <%end%>

    <div class="tab">
        <% form_for :salesrep, :url => salesreps_path, :html=>{:multipart => true} do |f| -%>
        <%=f.error_messages%>
        <table cellspacing="0" cellpadding="0" border="0" width="786" class="tab01">
            <tbody>
                <tr>
                    <td id="tab_tit" colspan="4">添加销售</td>
                </tr>
                <tr>
                    <td><%= f.label :name, "<em>*</em>销售姓名" %></td>
                    <td class="td_left">
                        <%= f.text_field :name %>
                    </td>
                </tr>
                <tr>
                    <td><%= f.label :address, "<em>*</em>地址" %></td>
                    <td class="td_left">
                        <%= f.text_field :address %>
                    </td>
                </tr>
                <tr>
                    <td><%= f.label :email, "销售邮箱" %></td>
                    <td class="td_left">
                        <%= f.text_field :email %>
                    </td>
                </tr>
                <tr>
                    <td><%= f.label :mobile, "手机号码" %></td>
                    <td class="td_left">
                        <%= f.text_field :mobile %>
                    </td>
                </tr>
                <tr>
                    <td><%= f.label :phone, "联系电话" %></td>
                    <td class="td_left">
                        <%= f.text_field :phone %>
                    </td>
                </tr>
                <tr>
                    <td><%= f.label :memo, "详细描述" %></td>
                    <td class="td_left">
                        <%= f.text_area :memo %>
                    </td>
                </tr>
                <tr><td id="tab_bottom" colspan="4"></td>
                </tr>
            </tbody>
        </table>
        <br/>
        <div class="tab_btn">
            <%= f.submit "保存",:class=>"button_btn" %>
        </div>
        <%end%>
    </div>
</div>