<% content_for :title, "添加用户" %>

<%= render :partial => 'shared/leftnav',:locals => { :highlight => "users_new"} %>

<div id="main">
	<%if !@current_navleft_header_name.nil? && !@current_navleft_name.nil?%>
	<%= render :partial => 'shared/s_path'%>
	<%end%>

	<div class="tab">
		<% form_for :user, :url => users_path do |f| -%>
		<%=f.error_messages%>
		<table cellspacing="1" cellpadding="0" border="0" width="786" class="tab01">
			<tbody>
				<tr>
					<td id="tab_tit" colspan="4">添加用户</td>
				</tr>
				<tr>
					<td><%= f.label :login, "<em>*</em>登录帐号" %></td>
					<td class="td_left">
						<%= f.text_field :login %>
					</td>
				</tr>
				<tr>
					<td><%= f.label :name, "<em>*</em>用户姓名" %></td>
					<td class="td_left">
						<%= f.text_field :name %>
					</td>
				</tr>
				<tr>
					<td><%= f.label :email, "<em>*</em>电子邮箱" %></td>
					<td class="td_left">
						<%= f.text_field :email %>
					</td>
				</tr>
				<tr>
					<td><%= f.label :password, "<em>*</em>密码" %></td>
					<td class="td_left">
						<%= f.password_field :password %>
					</td>
				</tr>
				<tr>
					<td><%= f.label :password_confirmation, "<em>*</em>确认密码" %></td>
					<td class="td_left">
						<%= f.password_field :password_confirmation%>
					</td>
				</tr>
				<tr><td id="tab_tit" colspan="4"></td>
				</tr>
			</tbody>
		</table>
		<br/>
		<div class="tab_btn">
			<%= f.submit "保存",:class=>"button_btn" %>
		</div>
		<%end%>
	</div>
</div>